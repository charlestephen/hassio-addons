#!/bin/bash
set -e

echo "Loading env variables:"

OPTIONS_SOURCE=/data/options.json

mapfile -t arr < <(jq -r 'keys[]' "${OPTIONS_SOURCE}")

for KEYS in "${arr[@]}"; do
    # export key
    VALUE=$(jq ."$KEYS" "${OPTIONS_SOURCE}")
    
    # Continue for single values
    VALUE="${VALUE//[\"\']/}"
    line="${KEYS}=${VALUE}"

    # text
    if [[ "${KEYS}" == *"PASS"* ]]; then
        echo "${KEYS}=******"
    else
        echo "$line"
    fi

    export "$line"

    # set .env
    echo "$line" >> /.env || true

    # set /etc/environment
    echo "$line" >> /etc/environment

    # For s6
    if [ -d /var/run/s6/container_environment ]; then printf "%s" "${VALUE}" > /var/run/s6/container_environment/"${KEYS}"; fi
    echo "export ${KEYS}=${VALUE}" >> ~/.bashrc
done

if [ -n "$TZ" ] && [ -f /etc/localtime ]; then
    if [ -f /usr/share/zoneinfo/"$TZ" ]; then
        echo "Timezone set from $(cat /etc/timezone) to $TZ"
        ln -snf /usr/share/zoneinfo/"$TZ" /etc/localtime && echo "$TZ" >/etc/timezone
    fi
fi

groupmod -o -g $USER_GID $USER
usermod -o -u $USER_UID $USER

for FOLDER in /data/logs /share/gitea /data/ssh; do
    mkdir -p ${FOLDER}
done

chown $USER_UID:$USER_GID -R /data /config /share/gitea

if [ $# -gt 0 ]; then
    exec "$@"
else
    exec /bin/s6-svscan /etc/s6
fi